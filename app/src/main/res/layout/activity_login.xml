<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/dimen_10_dp">

                <ImageView
                    android:id="@+id/login_close_icon"
                    android:onClick="onLoginCloseClick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/search_icon"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/dimen_40_dp"
                    android:layout_marginRight="@dimen/dimen_40_dp">

                    <LinearLayout
                        android:id="@+id/login_licence_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/licence_checkbox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="我已阅读并同意"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="条款（可跳转）"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/login_input_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/login_licence_layout"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_50_dp">

                            <EditText
                                android:id="@+id/phone_edit_text"
                                android:layout_width="match_parent"
                                android:layout_centerVertical="true"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:textCursorDrawable="@null"
                                android:hint="手机号"/>
                        </RelativeLayout>

                        <include layout="@layout/gray_line_view"/>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_50_dp">

                            <ImageView
                                android:id="@+id/image_verifier"
                                android:layout_alignParentRight="true"
                                android:src="@mipmap/search_icon"
                                android:layout_centerVertical="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <EditText
                                android:id="@+id/image_verifier_edit_text"
                                android:layout_toLeftOf="@+id/image_verifier"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:background="@null"
                                android:textCursorDrawable="@null"
                                android:hint="图形验证码"/>
                        </RelativeLayout>

                        <include layout="@layout/gray_line_view"/>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_50_dp">

                            <Button
                                android:id="@+id/get_verifier_code_btn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:text="获取验证码"/>
                            <EditText
                                android:id="@+id/msg_verifier_edit_text"
                                android:layout_toLeftOf="@+id/get_verifier_code_btn"
                                android:layout_width="match_parent"
                                android:background="@null"
                                android:textCursorDrawable="@null"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:hint="短信验证码"/>

                        </RelativeLayout>

                        <include layout="@layout/gray_line_view"/>

                    </LinearLayout>

                    <ImageView
                        android:layout_width="@dimen/dimen_150_dp"
                        android:layout_height="@dimen/dimen_150_dp"
                        android:layout_above="@+id/login_input_layout"
                        android:layout_centerHorizontal="true"
                        android:src="@mipmap/art_user"/>
                </RelativeLayout>
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:padding="@dimen/dimen_10_dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="@dimen/dimen_40_dp"
                android:layout_marginRight="@dimen/dimen_40_dp"
                android:layout_marginBottom="@dimen/dimen_10_dp"
                android:background="@color/black"
                android:onClick="onLoginBtnClick"
                android:text="登录"
                android:textColor="@color/white"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>