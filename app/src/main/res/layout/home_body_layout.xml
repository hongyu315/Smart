<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:background="@color/whitesmoke">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_5_dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="热销商品"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/product_img1"
                    android:layout_width="@dimen/dimen_150_dp"
                    android:layout_height="@dimen/dimen_150_dp"
                    android:layout_margin="@dimen/dimen_10_dp"
                    android:background="#ffffffff"
                    android:src="@mipmap/art_user"
                    android:scaleType="center"/>

                <TextView
                    android:id="@+id/product_txt1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_15_dp"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:lines="1"
                    android:maxLength="18"
                    android:text="商品名"
                    android:textColor="#ff333333"
                    android:textSize="16.0sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/product_img2"
                    android:layout_width="@dimen/dimen_150_dp"
                    android:layout_height="@dimen/dimen_150_dp"
                    android:layout_margin="@dimen/dimen_10_dp"
                    android:background="#ffffffff"
                    android:src="@mipmap/art_user"
                    android:scaleType="center"/>

                <TextView
                    android:id="@+id/product_txt2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_15_dp"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:lines="1"
                    android:maxLength="18"
                    android:text="商品名"
                    android:textColor="#ff333333"
                    android:textSize="16.0sp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/product_img3"
                android:layout_width="@dimen/dimen_150_dp"
                android:layout_height="@dimen/dimen_150_dp"
                android:layout_margin="@dimen/dimen_10_dp"
                android:background="#ffffffff"
                android:src="@mipmap/art_user"
                android:scaleType="center"/>

            <TextView
                android:id="@+id/product_txt3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_15_dp"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="1"
                android:maxLength="18"
                android:text="商品名"
                android:textColor="#ff333333"
                android:textSize="16.0sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/product_img4"
                android:layout_width="@dimen/dimen_150_dp"
                android:layout_height="@dimen/dimen_150_dp"
                android:layout_margin="@dimen/dimen_10_dp"
                android:background="#ffffffff"
                android:src="@mipmap/art_user"
                android:scaleType="center"/>

            <TextView
                android:id="@+id/product_txt4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_15_dp"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="1"
                android:maxLength="18"
                android:text="商品名"
                android:textColor="#ff333333"
                android:textSize="16.0sp"/>
        </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/home_body_layout_more_product_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_20_dp"
            android:layout_marginRight="@dimen/dimen_20_dp"
            android:text="MORE 更多商品"/>

    </LinearLayout>
</LinearLayout>
