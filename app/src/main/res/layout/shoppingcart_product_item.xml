<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_white"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/single_checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10.0dip"
            android:layout_marginEnd="5.0dip"
            android:background="@null"
            android:button="@null"
            android:drawableLeft="@drawable/checkbox_bg"
            android:gravity="center"
            android:minWidth="32.0dip"
            android:minHeight="64.0dip"
            android:visibility="visible"/>

        <ImageView
            android:id="@+id/goods_image"
            android:layout_width="100.0dip"
            android:layout_height="120.0dip"
            android:layout_marginTop="5.0dip"
            android:layout_marginBottom="5.0dip"
            android:scaleType="centerCrop"/>

        <RelativeLayout
            android:id="@+id/goods_data"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginStart="10.0dip"
            android:layout_marginTop="5.0dip"
            android:padding="2.0dip">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/goods_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="武汉站"
                    android:textColor="@android:color/black"
                    android:textSize="15.0dip"/>

                <TextView
                    android:id="@+id/goods_del"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="删除"
                    android:textColor="@android:color/black"
                    android:textSize="15.0dip"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/goods_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:paddingTop="5.0dip"
                android:text="门票:内场 类型:憨人"
                android:textSize="14.0dip"/>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="15.0dip">

                <TextView
                    android:id="@+id/goods_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:lines="1"
                    android:text="￥1000.00"
                    android:textColor="@color/ic_taobao"
                    android:textSize="16.5sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/goods_prime_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10.0dip"
                    android:layout_toRightOf="@+id/goods_price"
                    android:text=""
                    android:textSize="16.0sp"/>

                <TextView
                    android:id="@+id/goods_buyNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10.0dip"
                    android:text="x1"
                    android:textColor="@android:color/black"
                    android:textSize="17.0sp"/>
            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/edit_goods_data"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginStart="10.0dip"
            android:layout_marginTop="5.0dip"
            android:orientation="horizontal"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="0.7"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10.0dip"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/reduce_goodsNum"
                        android:layout_width="35.0dip"
                        android:layout_height="35.0dip"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:text="—"
                        android:textSize="20.0sp"/>

                    <TextView
                        android:id="@+id/goods_Num"
                        android:layout_width="35.0dip"
                        android:layout_height="35.0dip"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:text="1"
                        android:textSize="20.0sp"/>

                    <TextView
                        android:id="@+id/increase_goods_Num"
                        android:layout_width="35.0dip"
                        android:layout_height="35.0dip"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:text="+"
                        android:textSize="20.0sp"/>
                </RelativeLayout>

                <TextView
                    android:id="@+id/goodsSize"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10.0dip"
                    android:layout_marginTop="20.0dip"
                    android:text="门票:内场 类型:憨人"/>
            </LinearLayout>

            <TextView
                android:id="@+id/del_goods"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="0.3"
                android:background="@color/ic_red"
                android:gravity="center"
                android:text="删除"
                android:textColor="@android:color/white"
                android:textSize="16.5sp"/>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2.5dip"
            android:background="@color/white"/>
    </LinearLayout>
</LinearLayout>