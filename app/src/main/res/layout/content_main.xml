<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tl="http://schemas.android.com/apk/res-auto"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/white"
                android:clipToPadding="true"
                android:fitsSystemWindows="true">

    <FrameLayout
        android:id="@+id/container_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/mainTabLayout"/>

    <com.flyco.tablayout.CommonTabLayout
        android:id="@+id/mainTabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/home_glod_text_unselect"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        tl:tl_iconHeight="25.0dip"
        tl:tl_iconWidth="25.0dip"
        tl:tl_indicator_color="@color/home_glod_text_select"
        tl:tl_indicator_height="0.0dip"
        tl:tl_textSelectColor="@color/home_glod_text_select"
        tl:tl_textUnselectColor="#ff7b7b7a"
        tl:tl_underline_color="#ffdddddd"
        tl:tl_underline_height="0dip"/>


</RelativeLayout>