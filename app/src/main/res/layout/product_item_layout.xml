<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:paddingBottom="@dimen/dimen_10_dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/product_item_icon"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_200_dp"
            android:src="@mipmap/art_user"/>
        <TextView
            android:id="@+id/product_item_time"
            android:layout_width="wrap_content"
            android:text="上架时间：2019-1-13"
            android:textColor="@color/gray"
            android:textSize="@dimen/dimen_12_dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/product_item_title"
            android:layout_width="wrap_content"
            android:text="饮食男士打到几点睡袍"
            android:textColor="@color/gray"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/product_item_price"
            android:layout_width="wrap_content"
            android:text="￥960"
            android:textColor="@color/gray"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>
