<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.LogisticsActivity">

    <com.hjq.bar.TitleBar
        android:id="@+id/logistics_topTitleBarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/logistics"
        app:icon_left="@mipmap/back"/>

    <LinearLayout
        android:background="@color/home_glod_text_select"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="@dimen/dimen_45_dp">

        <TextView
            android:text="顺丰快递 88888382388283828382838"
            android:layout_marginLeft="@dimen/dimen_40_dp"
            android:layout_width="match_parent"
            android:textColor="@color/white"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/logistics_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>